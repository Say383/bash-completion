# xrdb(1) completion                                       -*- shell-script -*-

_xrdb()
{
    local cur prev words cword comp_args
    _comp_initialize -- "$@" || return

    case $prev in
        -backup | -display | -help)
            return
            ;;
        -cpp | -edit)
            compopt -o bashdefault -o default
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_help "$1")' -- "$cur"))
        return
    fi

    compopt -o bashdefault -o default
} &&
    complete -F _xrdb xrdb

# ex: filetype=sh
