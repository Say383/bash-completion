# luac(1) completion                                       -*- shell-script -*-

_luac()
{
    local cur prev words cword comp_args
    _comp_initialize -- "$@" || return

    case $prev in
        -v | -)
            return
            ;;
        -o)
            compopt -o bashdefault -o default
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W "$(_parse_help "$1")" -- "$cur"))
        return
    fi

    _filedir lua
} &&
    complete -F _luac luac{,5{,.}{0..4}}

# ex: filetype=sh
