# pwck(8) completion                                       -*- shell-script -*-

_pwck()
{
    local cur prev words cword comp_args
    _comp_initialize -- "$@" || return

    if [[ $cur == -* ]]; then
        COMPREPLY=($(
            compgen -W '$(_parse_help "$1" || _parse_usage "$1")' -- "$cur"
        ))
        return
    fi

    compopt -o bashdefault -o default
} &&
    complete -F _pwck pwck

# ex: filetype=sh
